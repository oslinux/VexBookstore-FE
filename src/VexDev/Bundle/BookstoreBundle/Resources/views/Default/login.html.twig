{% extends 'VexBookstoreBundle::layout_form.html.twig' %}
{% block content %}
    <form class="form-signin" action="{{ path('login_check') }}" method="post">
        <h2 class="form-signin-heading">Please sign in</h2>
        <input name="_username" type="text" class="form-control" placeholder="Email address" value="{{ last_username }}" autofocus>
        <input name="_password" type="password" class="form-control" placeholder="Password">
        <label class="checkbox">
            <input type="checkbox" value="remember-me"> Remember me
        </label>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>
{% endblock %}